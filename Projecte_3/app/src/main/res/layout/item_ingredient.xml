<?xml version="1.0" encoding="utf-8"?>
<!-- item_ingredient.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/green_weak"
    android:layout_marginBottom="4dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >


        <TextView
            android:id="@+id/ingredientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom: "
            android:textSize="13dp"/>


        <TextView
            android:layout_marginStart="5dp"
            android:id="@+id/ingredientName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cafe desnatat"

            android:textSize="13dp"
            app:layout_constraintStart_toEndOf="@+id/ingredientName" />




        <TextView
            android:id="@+id/ingredientQuantitat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Quantitat: "
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="@+id/ingredientName"
            app:layout_constraintTop_toBottomOf="@+id/ingredientName" />


        <TextView
            android:id="@+id/ingredientQuantitat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Cafe desnatat"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/ingredientQuantitat"
            app:layout_constraintStart_toEndOf="@id/ingredientQuantitat" />


        <TextView
            android:id="@+id/ingredientCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories: "
            android:layout_marginTop="5dp"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="@+id/ingredientQuantitat"
            app:layout_constraintTop_toBottomOf="@+id/ingredientQuantitat" />


        <TextView
            android:id="@+id/ingredientCalories2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="0"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/ingredientCalories"
            app:layout_constraintStart_toEndOf="@id/ingredientCalories" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
