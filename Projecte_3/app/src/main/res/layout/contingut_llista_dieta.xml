<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    android:background="@color/white">
    
    
    


    <TextView
        android:id="@+id/edtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"

        android:textColor="@color/black"/>



    <TextView
        android:id="@+id/txvQuantitat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÂº apats: "
        app:layout_constraintStart_toEndOf="@id/edtName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        ></TextView>

    <TextView
        android:id="@+id/edtQuantitat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txvQuantitat"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"/>


    <TextView
        android:id="@+id/txvCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories: "
        app:layout_constraintStart_toEndOf="@id/edtQuantitat"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        ></TextView>

    <TextView
        android:id="@+id/edtCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txvCalories"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"/>




    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9"
        android:outlineAmbientShadowColor="@color/lavender"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="10dp" />






</androidx.constraintlayout.widget.ConstraintLayout>